<%= form_for(@room) do |f| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div style="display: inline; float: left; width: 60%;">
    <fieldset><legend>Room details</legend>
    <div> <!-- wrapper around  details -->
      <div class="field" style="float: left;">
        <%= f.label :name %><br>
        <%= f.text_field :name, :class => "phonebook" %><br />
		<%= f.label :building_id %><br>
        <%= f.collection_select :building_id, Building.order(:name), :id, :name, {:selected => @room.building_id, :prompt => 'Building'} %><br />
      </div>
      <div class="field">
        <%= f.label :public_name %><br>
        <%= f.text_field :public_name, :class => "phonebook" %>
      </div>
  
    <div style="clear: both" />
  
  
  <div class="field" style="float: left; width: 40%;">
    <%= f.label :building_floor_id %><br />
    <%= f.collection_select :building_floor_id, BuildingFloor.order(:name), :id, :name, {:selected => @room.building_floor_id, :prompt => 'Building floor'} %>
	</div> 
  <div class="field">
	<%= f.label :room_status_id %><br />
    <%= f.collection_select :room_status_id, RoomStatus.order(:name), :id, :name, {:selected => @room.room_status_id, :prompt => 'Room status', :class => "phonebook"} %><br />
  </div>

	</div>
    </fieldset>
  <div style="clear: both;"></div>

  <div class="actions">
    <%= f.submit :class => 'button' %>
  </div>
<% end %>
