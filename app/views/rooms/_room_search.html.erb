<div id="findbyloc">
<%= form_tag "/rooms", :method => "GET", :authenticity_token => false do %>
<label for="findbyloc-field" class="overlabel">Type room name</label>
<%= text_field_tag "findbyloc", session[:findbyloc], id: "findbyloc-field"  %>
<%= submit_tag "Go", :name => nil, :class => "button"  %>
<%= link_to "Clear", '#', {:id => "search", :onclick => "$('#findbyloc-field').val('')"} %>
<% end %>
</div>