<h2>Listing archiving policies</h2>
<p>
<div class="digg_pagination">  
<%= will_paginate @archiving_policies %>
<% if can? :create, ArchivingPolicy %>
<%= link_to 'New ArchivingPolicy', new_archiving_policy_path %>
<% end %>
</div>
</p>
<br />
<p style="clear: both">
<table class="phonebook" cellspacing="0">
  <thead>
    <tr class="phonebook">
      <th>Name</th>
	  <th></th>
      <th>Description</th>
      <th>Policy type</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @archiving_policies.each do |archiving_policy| %>
    <tr class="<%= cycle('ma_row_light', 'ma_row_dark') %>">
    <%= render :partial => "shared/edit_link", :object => archiving_policy, :locals => {:display => archiving_policy.name, :edit_path => edit_archiving_policy_path(archiving_policy)} %>
    <td><%= archiving_policy.description %></td>
    <td><%= PolicyType.find(archiving_policy.policy_type_id).name %></td>
    <%= render :partial => "shared/delete_link", :object => archiving_policy, :locals => {:display => "Delete #{archiving_policy.name}" } %>
    </tr>
    <% end %>
  </tbody>
</table>

<p>
<div class="digg_pagination">  
<%= will_paginate @archiving_policies %>
<% if can? :create, ArchivingPolicy %>
<%= link_to 'New ArchivingPolicy', new_archiving_policy_path %>
<% end %>
</div>
</p>
