<h2>Listing voice policies</h2>
<p>
<div class="digg_pagination">  
<%= will_paginate @voice_policies %>
<% if can? :create, VoicePolicy %>
<%= link_to 'New VoicePolicy', new_voice_policy_path %>
<% end %>
</div>
</p>
<br />
<p style="clear: both">
<table class="phonebook" cellspacing="0">
  <thead>
    <tr class="phonebook">
      <th>Name</th>
	  <th></th>
      <th>Description</th>
      <th>Policy type</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @voice_policies.each do |voice_policy| %>
    <tr class="<%= cycle('ma_row_light', 'ma_row_dark') %>">
    <%= render :partial => "shared/edit_link", :object => voice_policy, :locals => {:display => voice_policy.name, :edit_path => edit_voice_policy_path(voice_policy)} %>
    <td><%= voice_policy.description %></td>
    <td><%= PolicyType.find(voice_policy.policy_type_id).name %></td>
    <%= render :partial => "shared/delete_link", :object => voice_policy, :locals => {:display => "Delete #{voice_policy.name}" } %>
    </tr>
	<% end %>
  </tbody>
</table>

<p>
<div class="digg_pagination">  
<%= will_paginate @voice_policies %>
<% if can? :create, VoicePolicy %>
<%= link_to 'New VoicePolicy', new_voice_policy_path %>
<% end %>
</div>
</p>
